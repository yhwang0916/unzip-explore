<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#CBCBCB" >
    
    <RelativeLayout
        android:id = "@+id/main_option"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/gradient"
        >
      <ImageButton android:layout_width="50dip"
    android:layout_height="35dip"
    android:id="@+id/back"
    android:src="@drawable/back"
    android:scaleType="centerInside"
    android:layout_marginLeft="5dip"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:padding="0dip"
    android:background="@drawable/button_bg_selector"
    />
	<TextView
	    android:id="@+id/current_dir"
	    android:layout_width="240dip"
	    android:layout_height="wrap_content"
	    android:text="系统管理"
	    android:textSize="18sp"
	    android:textColor="#ffffff"
	    android:textStyle="bold"
	    android:layout_centerInParent="true"
	    android:gravity="center_horizontal"
	    
	    />
      
    <Button android:layout_width="50dip"
    android:layout_height="35dip"
    android:id="@+id/quit"
    android:src="@drawable/back"
    android:text="退出"
    android:textColor="#ffffff"
    android:layout_marginRight="5dip"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:padding="0dip"
    android:background="@drawable/button_bg_selector"
    />
	

    </RelativeLayout>
    
     <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/corner"
        android:orientation="vertical">
        
         <LinearLayout android:layout_width="fill_parent"
		    android:id="@+id/setting_about"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_top_selector">
            <TextView android:layout_width="200dip"
                android:layout_height="40dip"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="关于"/>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="60dip"
                android:src="@drawable/arrow_right" />
		</LinearLayout>
		<TextView android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CBCBCB"/>
		
		<LinearLayout android:layout_width="fill_parent"
		    android:id="@+id/setting_help"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector">
            <TextView android:layout_width="200dip"
                android:layout_height="40dip"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="帮助"/>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="60dip"
                android:src="@drawable/arrow_right" />
		</LinearLayout>
		<TextView android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CBCBCB"/>
		
        <LinearLayout android:layout_width="fill_parent"
            android:id="@+id/setting_feedback"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector">
            <TextView android:layout_width="200dip"
                android:layout_height="40dip"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="用户反馈"/>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="60dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
		<TextView android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CBCBCB"/>
		<!--  
        <LinearLayout android:layout_width="fill_parent"
            android:id="@+id/setting_myapp"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView android:layout_width="200dip"
                android:layout_height="40dip"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="相关应用"/>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="60dip"
                android:src="@drawable/arrow_right" />
		</LinearLayout>
		<TextView android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#CBCBCB"/>  -->

		<LinearLayout android:layout_width="fill_parent"
		    android:id="@+id/setting_update"
            android:layout_height="50dip"
            android:paddingLeft="10dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_bottom_selector">
            <TextView android:layout_width="200dip"
                android:layout_height="40dip"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="版本更新"/>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="60dip"
                android:src="@drawable/arrow_right" />
		</LinearLayout>
    </LinearLayout>
    
</LinearLayout>